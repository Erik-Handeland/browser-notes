{
  "name": "Browser Notes",
  "description" : "Quickly save notes for sites you visit. Save locally or sync with your Google Account.",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "24": "logo24.png",
    "64": "logo64.png",
    "128": "logo128.png",
    "512": "logo512.png"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "optional_permissions": [
    "<all_urls>"
  ]
}
